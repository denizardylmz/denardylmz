using System.ComponentModel.DataAnnotations;
using Microsoft.EntityFrameworkCore;

namespace DB_new_hope
{
    class App
    {
        public static void Main()
        {
            using (var ctx = new ContextStudents())
            {
                var pr = new Student
                {
                    Name = "Deniz",
                };

                ctx.Students.Add(pr);
                ctx.SaveChanges();
            }
        }
        
        public class ContextStudents : DbContext
        {

            protected override void OnConfiguring(DbContextOptionsBuilder optionsBuilder)
            {
                optionsBuilder.UseSqlServer(
                    "Server=tcp:denizarda.database.windows.net,1433;Initial Catalog=DB_Works;Persist Security Info=False;" +
                    "User ID=denizarda;Password=Ciyo5897;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;");
            }
            
            public DbSet<Student> Students{ get; set; }
        }
        
        public class Student
        {
            [Key]
            public int playerId { get; set; }
            public string Name { get; set; }
        }
    }
}
